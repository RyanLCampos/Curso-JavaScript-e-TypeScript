<%- include('includes/head') %>
<%- include('includes/navbar') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-4">
                <h1 class="text-center">Contato</h1>
                <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

                <%- include('includes/messages') %>

                <form action="/contato" method="POST">
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group my-4">
                        <label>Nome</label>
                        <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" placeholder="Insira o nome do contato">
                    </div>
                    <div class="form-group my-4">
                        <label>Sobrenome</label>
                        <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" placeholder="Insira o sobrenome do contato">
                    </div>
                    <div class="form-group my-4">
                        <label>E-mail</label>
                        <input value="<%= contato.email %>" type="email" class="form-control" name="email" placeholder="Insira o email do contato">
                    </div>
                    <div class="form-group my-4">
                        <label>Telefone/Celular</label>
                        <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" placeholder="Insira o nÃºmero de telefone/celular do contato">
                    </div>
                    <button type="submit" class="btn btn-primary my-4">Salvar</button>
                </form>
                
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('includes/footer') %>

   